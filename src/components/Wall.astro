<section class="wall">
  <img src="board2.png" alt="" />
</section>

<style>
  * {
    padding: 0;
    margin: 0;
    box-sizing: border-box;
  }

  .wall {
    width: 100%;
    height: 100svh;
    background-image: url("wall2.jpg");
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .card {
    position: absolute;
    top: 20%;
    left: 50%;
    transform: translateX(-50%);
    height: 300px;
    width: 500px;
    border: 5px solid #bd8fd0;
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: #3e3e3e;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    border-radius: 20px;
  }

  .wall img {
    height: 500px;
    filter: drop-shadow(10px 10px 5px #0000006a);
  }

  @media (max-width: 600px) {
    .wall {
      background-position: 20%;
    }

    .wall img {
      height: 300px;
    }
  }
</style>
